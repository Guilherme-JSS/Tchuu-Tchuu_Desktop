{
  "name": "tchuu-tchuu_desktop",
  "version": "1.0.0",
  "description": "versão desktop do Tchuu-Tchuu",
  "main": "main.js",
  "author": "Guilherme José Schutz da Silva",  
  "scripts": {
    "start": "electron .",
    "make": "electron-forge make",
    "package": "electron-forge package"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.0.0",
    "@electron-forge/maker-deb": "^7.0.0",
    "@electron-forge/maker-rpm": "^7.0.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.0.0",
    "electron": "^38.2.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "logo-THUU.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "TchuuTchuuDesktop",
            "setupIcon": "logo-THUU.ico",
            "executableName": "TchuuTchuu",
            "authors": "Guilherme José Schutz da Silva"   
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": ["win32"]
        }
      ]
    }
  }
}