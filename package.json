{
  "name": "tchuu-tchuu_desktop",
  "version": "1.0.0",
  "description": "vers√£o desktop do Tchuu-Tchuu",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "make": "electron-forge make",
    "package": "electron-forge package"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.0.0",
    "@electron-forge/maker-deb": "^7.0.0",
    "@electron-forge/maker-rpm": "^7.0.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.0.0",
    "electron": "^38.2.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "../FRONT-END/Assets/imagens/logos/logo THUU.png"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "TchuuTchuuDesktop",
            "setupIcon": "build/icon.ico",
            "loadingGif": "build/installing.gif",
            "iconUrl": "https://seusite.com/icon.ico",
            "executableName": "TchuuTchuu"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "win32"
          ]
        }
      ]
    }
  }
}
